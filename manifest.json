{
  "manifest_version": 3,
  "name":             "Pixiv Companion",
  "description":      "Pixiv Tools",
  "version":          "1.0",
  "icons":            {
    "128": "content/assets/images/icon.png"
  },
  "action":           {
    "default_popup": "content/popup.html",
    "default_icon":  {
      "128": "content/assets/images/icon.png"
    }
  },
  "permissions":      [
    "activeTab",
    "storage"
  ],
  "content_scripts":  [
    {
      "js":      [
        "content/assets/scripts/pixiv.net.js"
      ],
      "matches": [
        "https://www.pixiv.net/*/artworks/*"
      ]
    }
  ],
  "host_permissions": [
    "*://discord.com/api/webhooks/*"
  ]
}